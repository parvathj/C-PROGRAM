#include<stdio.h>
int main()
{
  int num1,num2,result;
  char op;
  printf("\nEnter the operator(=,-,*,/,%%) : ");
  scanf("%c",&op);
  printf("\nEnter two integers :");
  scanf("%d%d",&num1,&num2);
  
  if (op == '+')
  {
    result = num1 + num2;
  }
  else if (op == '-')
  {
    result = num1 - num2;
  }
  else if (op == '*')
  {
    result = num1 * num2;
  }
  else if (op == '/')
  {
    if (num2 == 0)
    {
      printf("\nDENOMINATOR CANNOT BE ZERO");
      printf("\nRE-ENTER THE CORRECT VALUES");
      return 1;
    }
    else
    {
      result = num1 / num2;
    }
  }
  else if (op == '%')
  {
    if (num2 == 0)
    {
      printf("\nDENOMINATOR CANNOT BE ZERO");
      printf("\nRE-ENTER THE CORRECT VALUES");
      return 2;
    }
    else
    {
      result = num1 % num1;
    }
  }
  else
  {
    printf("\n INVALID OPRTATOR");
    printf("\n ReENTER THE VALUES");
    return 3;
  }
  printf("\n RESULT: %d %c %d = %d",num1,op,num2,result);
  return 0;
  }
